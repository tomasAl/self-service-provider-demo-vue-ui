/*
 * @MICROFRONTEND
 *
 * Minimali būtina TypeScript konfigūracija.
 * Privalomos ir labai svarbios yra nurodytos
 * `"esModuleInterop": true` bei `"moduleResolution": "node"`
 * reikšmės.
 */
{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "typeRoots": [
      "src/@types"
    ],
    "paths": {
      "@/*": ["src/*"],
      "rc-ses-vue-components": ["local_modules/rc-ses-vue-components"],
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/@types/**/*",
    "src/main.js",
    "src/shims-vue.d.ts",
  ],
  "exclude": [
    "node_modules",
    "local_modules",
  ]
}
