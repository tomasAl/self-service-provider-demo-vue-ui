/*
 * @MICROFRONTEND
 *
 * Minimali būtina TypeScript konfigūracija.
 * Privaloma ir svarbi yra nurodyta
 * `"esModuleInterop": true` reikšmė.
 */
{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "vite/client",
    ],
    "paths": {
      "@/*": ["src/*"],
      "@plugins/*": ["src/plugins/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "lib/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/@types/**/*",
    "src/main.js",
    "lib/single-spa-vue.cjs",
  ],
  "exclude": [
    "node_modules",
  ]
}
